@page
@model MB.Presentation.MVCCore.Areas.Adminstorator.Pages.ArticleManagment.CreateModel
@{
}
<div class="card">
    <div class="card-header">
        <h2>Create New Article</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-6 cal-sm-12">
                        <div class="form-group">
                            <label for="Title" class="control-lable">Title:</label>
                            <input name="Title" id="Title" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6 cal-sm-12">
                        <div class="form-group">
                            <label for="ShortDiscription" class="control-lable">ShortDiscription:</label>
                            <textarea name="ShortDiscription" id="ShortDiscription" class="form-control" rows="3"></textarea>
                        </div>
                    </div>

                    <div class="col-md-6 cal-sm-12">
                        <div class="form-group">
                            <label for="Image" class="control-lable">Image:</label>
                            <input name="Image" id="Image" class="form-control">

                        </div>
                    </div>

                    <div class="col-md-6 cal-sm-12">
                        <div class="form-group">
                            <label for="Content" class="control-lable">Content:</label>
                            <textarea name="Content" id="Content" class="form-control" rows="5"></textarea>

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label for="ArticleCategory" class="control-label">Article Category:</label>
                            <select asp-items="Model.ArticleCategory" name="ArticleCategoryId" id="ArticleCategoryId" class="form-control">
                                <option value="0">Select Article Category</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-success">
                        <a class="btn btn-dark" asp-page="./List" asp-area="Adminstorator">Back To List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
