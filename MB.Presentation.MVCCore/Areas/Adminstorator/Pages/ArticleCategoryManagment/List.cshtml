@page
@model             MB.Presentation.MVCCore.Areas.Adminstorator.Pages.ArticleCategoryManagment.ListModel
@{
}

<div class="card">
    <div class="card-header">
        <h3 class="float-left">ArticleCategoryList</h3>
        <div class="float-right">
            <a class="btn btn-success" asp-page="./Create" asp-area="Adminstorator">Create New</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Status</th>
                    <th>CreationDate</th>
                    <th>Operations</th>

                </tr>
            </thead>

            <tbody>
                @foreach (var articlecategory in Model.Articlecategories)
                {
                <tr>
                    <td>@articlecategory.Id</td>
                    <td>@articlecategory.Title</td>
                    <td>
                        @if (articlecategory.IsDeleted)
                        {
                            <i class="fa fa-close fa-2x text-danger"></i>
                        }
                        else
                        {
                            <i class="fa fa-check fa-2x text-success"></i>
                        }
                    </td>
                    <td>@articlecategory.CraetionDate</td>
                    <td>
                        <a class="btn btn-warning mr-3" asp-page="./Edit" asp-route-id="@articlecategory.Id">Rename</a>
                        @if (articlecategory.IsDeleted)
                        {
                            <form method="post" asp-page-handler="Activate" class="float-left mr-3">
                                <button class="btn btn-success">Activate</button>
                                <input type="hidden" name="id" value="@articlecategory.Id" />
                            </form>
                        }
                        else
                        {

                            <form method="post" asp-page-handler="Remove" class="float-left mr-3">
                                <button class="btn btn-danger">Remove</button>
                                <input type="hidden" name="id" value="@articlecategory.Id" />
                            </form>


                        }
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>